<!DOCTYPE html>
<html>
  <head>
    <title>IncubitAssessment</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= link_to 'Logout', logout_path if logged_in? %>
      <%= link_to 'Sign Up', new_user_path unless logged_in? %>
      <%= link_to 'Forgot Password', new_reset_password_path unless logged_in? %>
    </header>
    <section>
      <% flash.each do |name, msg| %>
        <%= name %>:<%= msg %>
      <% end %>
      <br>
      <%= yield %>
    </section>
  </body>
</html>
